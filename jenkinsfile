pipeline{
    agent any
    tools {
        maven 'Maven' 
    }

    stages{
        stage("Test"){
            steps{
                sh "mvn test"
            }
        }

        stage("Build"){
            steps{
                sh "mvn package"
            }
        }

        stage("Deploy on Test"){
            steps{
                //deploy on container --> plugin
                deploy adapters: [tomcat9(credentialsId: 'TestServer', path: '', url: 'http://3.82.69.176:8080')], contextPath: '/app', war: '**/*.war'
            }
        }

        stage("Deploy on Prod"){
            steps{
                deploy adapters: [tomcat9(path: '', url: 'http://44.204.177.79:8080')], contextPath: '/app', war: '**/*.war'
            }
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}
